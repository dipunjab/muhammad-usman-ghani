{%- style -%}
  .custom-card {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .custom-card__image-wrapper {
    position: relative;
    width: 433px;
    height: 444px;
    background: #f4f4f4;
  }

  .custom-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .custom-card__hotspot {
    position: absolute;
    width: 22px;
    height: 22px;
    background: rgba(248, 248, 248, 0.9);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transform: translate(-50%, -50%);
    padding: 0;
  }

  @media (max-width: 1340px) {
    .custom-card__image-wrapper {
      width: 100%;
      height: auto;
      aspect-ratio: 433 / 444;
    }
  }

  @media (max-width: 900px) {
    .custom-card__image-wrapper {
      width: 169px;
      height: 186.42px;
    }
    .custom-card__hotspot {
      top: 15px !important;
      left: auto !important;
      right: 15px !important;
      transform: none !important;
    }
  }
{%- endstyle -%}

<div class="custom-card">
  <div class="custom-card__image-wrapper">
    {%- if card_product.featured_image != blank -%}
      <img 
        src="{{ card_product.featured_image | image_url: width: 600 }}"
        alt="{{ card_product.title | escape }}"
        class="custom-card__img"
        loading="lazy"
        width="600"
        height=""
      >
    {%- else -%}
      {{ 'product-1' | placeholder_svg_tag: 'custom-card__img' }}
    {%- endif -%}

    <button class="custom-card__hotspot" 
            style="top: {{ pos_y }}%; left: {{ pos_x }}%;"
            data-open-popup="{{ card_product.handle }}">
      <span style="color: #000; font-size: 14px;">+</span>
    </button>
  </div>
</div>